{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"strict": true,
		"baseUrl": "./src/",
		"paths": {
			"@root/*": ["../*"],
			"@src/*": ["./*"],
			
			// camadas clean architecture
			"@application/*": ["./application/*"],
			"@core/*": ["./core/*"],
			"@infrastructure/*": ["./infrastructure/*"],
			"@schemas/*": ["./infrastructure/database/drizzle/schemas/*"],
			
			"@tests/*": ["./tests/*"],
			

			"@app-components/*": ["./application/components/*"],
			"@app/*": ["./application/app/*"],
			"@api/*": ["./application/api/*"],
		}
	},
	"include": [
		"**/*.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
	],
  "exclude": [
    "node_modules",
    "eslint.config.cjs",
  ]
}
