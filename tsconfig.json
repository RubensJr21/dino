{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"allowJs": true,
		"strict": true,
		"baseUrl": "./src",
		"paths": {
			"@root/*": ["../*"],
			"@/*": ["./*"],
			"@components/*": ["./components/*"],
			"@app/*": ["./app/*"],
			"@decorators/*": ["./decorators/*"],
			"@api/*": ["./api/*"],
			"@core/*": ["./api/core/*"]
		}
	},
	"include": [
		"**/*.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	]
}
