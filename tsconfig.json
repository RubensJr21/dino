{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": "./src/",
    "paths": {
      "@root/*": [
        "../*"
      ],
      "@src/*": [
        "./*"
      ],
      "@application/*": [
        "./application/*"
      ],
      "@core/*": [
        "./core/*"
      ],
      "@infrastructure/*": [
        "./infrastructure/*"
      ],
      "@schemas/*": [
        "./infrastructure/database/drizzle/schemas/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "@app-components/*": [
        "./application/components/*"
      ],
      "@app/*": [
        "./application/app/*"
      ],
      "@api/*": [
        "./application/api/*"
      ]
    }
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "App.jsx"
  ],
  "exclude": [
    "node_modules",
    "eslint.config.cjs"
  ]
}
